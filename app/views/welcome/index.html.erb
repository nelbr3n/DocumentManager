<div class="row">
	<div class="col s6">
		<div class="card-panel white">
			<h5>Documentos Enviados</h5>
			<ul class="collapsible" data-collapsible="accordion">
				<% @documents.each do |document| %>
					<% if current_user.id == document.sender_id && document.isSenderPrivate && document.isReceiverPrivate %>
						<li>
							<div class="collapsible-header"><%= document.subject %></div>
							<div class="collapsible-body">
								<span>From: <%= current_user.email %></span>
								<span>To: <%= document.receiver_id %></span>
								<span>Body: <%= document.content %></span>
							</div>
						</li>
					<% end %>
				<% end %>
			</ul>
		</div>
	</div>

	<div class="col s6">
		<div class="card-panel white">
			<h5>Documentos Recibidos</h5>
			<ul class="collapsible" data-collapsible="accordion">
				<% @documents.each do |document| %>
					<% if current_user.id == document.reciever_id && document.isSenderPrivate && document.isReceiverPrivate %>
						<li>
							<div class="collapsible-header"><%= document.subject %></div>
							<div class="collapsible-body">
								<span>From: <%= document.sender_id %></span>
								<span>To: <%= current_user.email %></span>
								<span>Body: <%= document.content %></span>
							</div>
						</li>
					<% end %>
				<% end %>
			</ul>
		</div>
	</div>
</div>

