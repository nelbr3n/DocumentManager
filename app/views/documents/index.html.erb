<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<table>
  <thead>
    <tr>
      <th>Documentcode</th>
      <th>Senderemail</th>
      <th>Receiveremal</th>
      <th>Creatoremail</th>
      <th>Subject</th>
      <th>Date</th>
      <th>Content</th>
      <th>Tags</th>
      <th>Conversationid</th>
      <th>Issenderprivate</th>
      <th>Senderstatus</th>
      <th>Isreceiverprivate</th>
      <th>Receiverstatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.documentCode %></td>
        <td><%= document.sender.email %></td>
        <td><%= document.receiver.email %></td>
        <td><%= document.creator.email %></td>
        <td><%= document.subject %></td>
        <td><%= document.date %></td>
        <td><%= document.content %></td>
        <td><%= document.tags %></td>
        <td><%= document.conversationId %></td>
        <td><%= document.isSenderPrivate %></td>
        <td><%= document.senderStatus.description %></td>
        <td><%= document.isReceiverPrivate %></td>
        <td><%= document.receiverStatus.description %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

