<!DOCTYPE html>
<html>
  <head>
    <title>DocumentManager</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%== stylesheet_link_tag 'https://fonts.googleapis.com/icon?family=Material+Icons' %>
    <%== stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Mada'%>
    <%= include_gon %>
  </head>
  <body>
    <% if user_signed_in? %>
      <div class="page-container">
        <nav>
          <div class="nav-wrapper">
            <a href="#" class="brand-logo">
              <div class="logo-container-nv">
                <%= image_tag("logo2.png",:class => "logo_navbar" )%>
              </div>
            </a>
            <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
              <% if current_user.isGeneralAdmin? %>
                <li><%= link_to "Dashboard", root_path %></li>
                <li><%= link_to "Departamentos", departments_path %></li>
                <li><%= link_to "Estados", statuses_path %></li>
                <!-- Dropdown Trigger -->
                <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Documentos<i class="material-icons right" style="margin-top:-20px;">arrow_drop_down</i></a></li>
              <% elsif current_user.isDepartmentAdmin? %>
                <li><%= link_to "Dashboard", root_path %></li>
                <li><%= link_to "Departamentos", departments_path %></li>
                <li><%= link_to "Estados", statuses_path %></li>
                <!-- Dropdown Trigger -->
                <li><a class="dropdown-button" data-activates="dropdown1">Documentos<i class="material-icons right" style="margin-top:-20px;">arrow_drop_down</i></a></li>
              <% else %>
                <li><%= link_to "Dashboard", root_path %></li>
                <!-- Dropdown Trigger -->
                <li><a class="dropdown-button" data-activates="dropdown1">Documentos<i class="material-icons right" style="margin-top:-20px;">arrow_drop_down</i></a></li>
              <% end %>
              <li><%= link_to "Cerrar Sesion", destroy_user_session_path, :method => :delete %></li>  
            </ul>
          </div>
        </nav>
      <% end %>
      <div class="page-wrapper">
        <%= yield %>
      </div>
    </div>

    <!---Dropdown de documentos -->
    <ul id="dropdown1" class="dropdown-content">
      <li><%= link_to "Nuevo Documento", new_document_path, class: "grey-text text-darken-4" %></li>
      <li class="divider" ></li>
      <li><%= link_to "Indice de Documentos", documents_path, class: "grey-text text-darken-4" %></li>
    </ul>


    <%if user_signed_in? %>
      <ul class="side-nav" id="mobile-demo">
        <% if current_user.isGeneralAdmin? %>
          <li><%= link_to "Dashboard", root_path %></li>
          <li><%= link_to "Departamentos", departments_path %></li>
          <li><%= link_to "Estados", statuses_path %></li>
          <!-- Dropdown Trigger -->
          <li><a class="dropdown-button" data-activates="dropdown1">Documentos<i class="material-icons right" >arrow_drop_down</i></a></li>
        <% elsif current_user.isDepartmentAdmin? %>
          <li><%= link_to "Dashboard", root_path %></li>
          <li><%= link_to "Departamentos", departments_path %></li>
          <li><%= link_to "Estados", statuses_path %></li>
          <!-- Dropdown Trigger -->
          <li><a class="dropdown-button" data-activates="dropdown1">Documentos<i class="material-icons right">arrow_drop_down</i></a></li>
        <% else %>
          <li><%= link_to "Dashboard", root_path %></li>
          <!-- Dropdown Trigger -->
          <li><a class="dropdown-button" data-activates="dropdown1">Documentos<i class="material-icons right">arrow_drop_down</i></a></li>
        <% end %>
        <li><%= link_to "Cerrar Sesion", destroy_user_session_path, :method => :delete %></li> 
      </ul>
    <% end %>

    
  </body>
</html>